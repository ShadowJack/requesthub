<div class="text-center">
  <h3>Welcome to the Requestbin.</h3>

  <%= button("Create a new bin", to: "/bins", class: "btn btn-primary mt-3") %>
</div>

<%= if not Enum.empty?(@bins) do %>
  <h4>Recent bins:</h4>
  <ul class="list-group list-group-flush">
    <%= for bin_id <- @bins do %>
      <li class="list-group-item">
        <%= link(bin_id, to: request_path(@conn, :index, bin_id)) %>
      </li>
    <% end %>
  </ul>
<% end %>
